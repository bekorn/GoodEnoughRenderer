{
  "version": 3,
  "configurePresets": [
    {
      "hidden": true,
      "name": "baseNinja",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build/${presetName}-Project",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_INSTALL": "ON",
        "VCPKG_FEATURE_FLAGS": "versions"
      }
    },
    {
      "inherits": "baseNinja",
      "name": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "inherits": "baseNinja",
      "name": "RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "inherits": "baseNinja",
      "name": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}